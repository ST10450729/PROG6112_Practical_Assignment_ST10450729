package book.store.app;

/**
 *
 * @author rakwa
 */
  // BookstoreApp.java
public class BookstoreApp {
    public static void main(String[] args) {
        Bookstore bookstore = new Bookstore(10);

        // Add some books
        bookstore.addBook(new Book("Java for Beginners", "Nara Smith", "1234859037", 5));
        bookstore.addBook(new Book("Python Crash Course", "Brandon Mars", "6739223856", 3));
        bookstore.addBook(new Book("C++ Programming", "Katty Dean", "6492664926", 2));

        // Search for a book
        bookstore.searchBook("Java for beginners");

        // Remove a book
        bookstore.removeBook("1234859037");

        // Generate report
        bookstore.generateReport();
    }

    private static class Book {

        public Book(String java_for_Beginners, String john_Doe, String string, int i) {
        }
    }
}


   